<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_hole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dip" >

        <ImageView
            android:id="@+id/iv_company_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/topbar_back_btn_black"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的公司"
            android:textColor="#333333"
            android:textSize="17sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DADCDC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rl_company_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="公司LOGO"
                android:textColor="#303030" />

            <ImageView
                android:id="@+id/iv_logo_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/list_next_tips" />

            <com.spt.controler.CircleImageView
                android:id="@+id/civ_company_logo"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginRight="8dip"
                android:layout_toLeftOf="@+id/iv_logo_arrow"
                android:background="@drawable/noheader" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/rl_company_logo"
            android:background="#DADCDC" />

        <LinearLayout
            android:id="@+id/ll_blank1"
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:layout_below="@+id/iv_line2"
            android:background="#f8f8f8"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_line3"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/ll_blank1"
            android:background="#DADCDC" />

        <RelativeLayout
            android:id="@+id/rl_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_line3" >

            <RelativeLayout
                android:id="@+id/rl_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="公司名称"
                    android:textColor="#303030" />

                <TextView
                    android:id="@+id/tv_name_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:textColor="#303030" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_company_name"
                android:paddingLeft="10dip" >

                <ImageView
                    android:id="@+id/iv_line4"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#DADCDC" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_line"
                android:background="#FFFFFF"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_job_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="职位名称"
                    android:textColor="#303030" />

                <TextView
                    android:id="@+id/tv_job_name_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:textColor="#303030" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line5"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/rl_con"
            android:background="#DADCDC" />

        <LinearLayout
            android:id="@+id/ll_blank2"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_below="@+id/iv_line5"
            android:background="#f8f8f8"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_line7"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/ll_blank2"
            android:background="#DADCDC" />

        <TextView
            android:id="@+id/tv_authentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_line7"
            android:gravity="center"
            android:padding="10dip"
            android:text="认证"
            android:textColor="#303030" />

        <ImageView
            android:id="@+id/iv_line8"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/tv_authentication"
            android:background="#DADCDC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/iv_line6"
            android:layout_below="@+id/iv_line8"
            android:background="#f8f8f8"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_line6"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_above="@+id/rl_bottom"
            android:background="#DADCDC" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="7dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_co_btn"
                android:gravity="center"
                android:text="保存"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>