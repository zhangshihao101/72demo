<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_legal_card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_company_filter"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_legal_card_one"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_legal_card_two"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/iv_legal_card_one"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_legal_card_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="点击屏幕退出"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>