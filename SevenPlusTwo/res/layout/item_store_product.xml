<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/iv_store_goods_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cb_dis_shop" />

        <TextView
            android:id="@+id/tv_store_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_store_goods_img"
            android:layout_toRightOf="@id/iv_store_goods_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="" />

        <TextView
            android:id="@+id/tv_store_goods_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/TextView3"
            android:layout_alignLeft="@+id/tv_store_goods_name"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="产品规格"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_store_goods_img"
            android:layout_alignLeft="@id/tv_store_goods_spec"
            android:text="销售价："
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_store_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_store_goods_img"
            android:layout_toRightOf="@id/TextView3"
            android:text="0.00"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_store_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_store_goods_price"
            android:layout_alignParentRight="true"
            android:text="X 1" />
    </RelativeLayout>

</LinearLayout>