<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip" >

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/test140140" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@+id/iv_goods_pic"
            android:ellipsize="end"
            android:maxLength="80"
            android:singleLine="true"
            android:text="Marmot土拨鼠男款卫衣"
            android:textColor="#3c3c3c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@+id/iv_goods_pic"
            android:text="款号："
            android:textColor="#a0a0a0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_style_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@+id/tv_goods_style"
            android:ellipsize="end"
            android:maxLength="5"
            android:singleLine="true"
            android:text="7JIA27JIA2"
            android:textColor="#3c3c3c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@+id/tv_goods_style_no"
            android:text="吊牌价："
            android:textColor="#a0a0a0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_price_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@+id/tv_goods_price"
            android:text="￥90.00"
            android:textColor="#3c3c3c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_style"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@+id/iv_goods_pic"
            android:text="品牌："
            android:textColor="#a0a0a0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_brand_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_style"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@+id/tv_goods_brand"
            android:text="土拨鼠"
            android:textColor="#3c3c3c"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:background="#fafafa"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/goods_list_btn_icon1"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:text="编辑"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_soldout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:background="#fafafa"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_soldout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/goods_list_btn_icon2"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:text="下架"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:background="#fafafa"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/goods_list_btn_icon3"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:text="分享"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:background="#fafafa"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/goods_list_btn_icon4"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:text="删除"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8sp" />

</LinearLayout>