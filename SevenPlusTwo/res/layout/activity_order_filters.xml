<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="40dip" >

            <!-- <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:padding="8dip"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="筛选"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:text="取消"
                android:textColor="#333333"
                android:textSize="15sp" /> -->
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/rl_et_order"
                        android:layout_width="match_parent"
                        android:layout_height="54dip"
                        android:background="#ffffff" >

                        <EditText
                            android:id="@+id/et_orderno"
                            android:layout_width="280dip"
                            android:layout_height="37dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_filter_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dip"
                            android:hint="订单号"
                            android:singleLine="true"
                            android:textColor="#969696"
                            android:textColorHint="#969696" />
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dip" >

                    <RelativeLayout
                        android:id="@+id/rl_shop"
                        android:layout_width="match_parent"
                        android:layout_height="27dip"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/tv_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:drawableLeft="@drawable/sale_filter_icon1"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_vertical"
                            android:drawablePadding="3dip"
                            android:text="店铺"
                            android:textColor="#646464"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_et_shop"
                        android:layout_width="match_parent"
                        android:layout_height="51dip"
                        android:layout_below="@+id/rl_shop"
                        android:background="#ffffff" >

                        <Spinner
                            android:id="@+id/sp_shop"
                            android:layout_width="280dip"
                            android:layout_height="37dip"
                            android:layout_centerInParent="true"
                            style="@style/spinner_style"
                            android:gravity="left|center_vertical"
                            android:hint="请输入订单号" />
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dip" >

                    <RelativeLayout
                        android:id="@+id/rl_channal"
                        android:layout_width="match_parent"
                        android:layout_height="27dip"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/tv_channal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:drawableLeft="@drawable/sale_filter_icon2"
                            android:layout_alignParentBottom="true"
                            android:drawablePadding="3dip"
                            android:text="渠道"
                            android:textColor="#646464"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_et_channal"
                        android:layout_width="match_parent"
                        android:layout_height="51dip"
                        android:layout_below="@+id/rl_channal"
                        android:background="#ffffff" >

                        <Spinner
                            android:id="@+id/sp_channal"
                            android:layout_width="280dip"
                            android:layout_height="37dip"
                            android:layout_centerInParent="true"
                            style="@style/spinner_style"
                            android:gravity="left|center_vertical"
                            android:hint="请输入订单号" />
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dip" >

                    <RelativeLayout
                        android:id="@+id/rl_order_state"
                        android:layout_width="match_parent"
                        android:layout_height="27dip"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/tv_order_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:drawableLeft="@drawable/sale_filter_icon3"
                            android:drawablePadding="3dip"
                            android:layout_alignParentBottom="true"
                            android:text="订单状态"
                            android:textColor="#646464"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_radio_order_statestate"
                        android:layout_width="match_parent"
                        android:layout_height="93dip"
                        android:layout_below="@+id/rl_order_state"
                        android:background="#ffffff"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >

                        <FrameLayout
                            android:id="@+id/FrameLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TextView1" >

                            <com.spt.controler.FlowTagLayout
                                android:id="@+id/fl_order_statestate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dip" >

                    <RelativeLayout
                        android:id="@+id/rl_pay_state"
                        android:layout_width="match_parent"
                        android:layout_height="27dip"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/tv_pay_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:drawableLeft="@drawable/sale_filter_icon4"
                            android:drawablePadding="3dip"
                            android:text="收款状态"
                            android:layout_alignParentBottom="true"
                            android:textColor="#646464"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_radio_pay_state"
                        android:layout_width="match_parent"
                        android:layout_height="93dip"
                        android:layout_below="@+id/rl_pay_state"
                        android:background="#ffffff"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >

                        <FrameLayout
                            android:id="@+id/FrameLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TextView1" >

                            <com.spt.controler.FlowTagLayout
                                android:id="@+id/fl_pay_statestate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="77dip" >

                    <RelativeLayout
                        android:id="@+id/rl_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="27dip"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/tv_order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/sale_filter_icon5"
                            android:drawablePadding="3dip"
                            android:layout_marginLeft="15dip"
                            android:layout_alignParentBottom="true"
                            android:text="订单日期"
                            android:textColor="#646464"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_slot_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:layout_below="@+id/rl_order_date"
                        android:background="#ffffff"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip" >

                        <EditText
                            android:id="@+id/et_start_day"
                            android:layout_width="110dip"
                            android:layout_height="38dip"
                            android:layout_centerVertical="true"
                            android:background="#f8f8f8"
                            android:focusable="false"
                            android:gravity="center"
                            android:hint="起始时间"
                            android:inputType="none"
                            android:singleLine="true"
                            android:textColor="#646464"
                            android:textColorHint="#969696"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/et_end_day"
                            android:layout_toRightOf="@+id/et_start_day"
                            android:gravity="center_horizontal"
                            android:text="至"
                            android:textColor="#646464"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/et_end_day"
                            android:layout_width="110dip"
                            android:layout_height="38dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="#f8f8f8"
                            android:focusable="false"
                            android:gravity="center"
                            android:hint="结束时间"
                            android:inputType="none"
                            android:singleLine="true"
                            android:textColor="#646464"
                            android:textColorHint="#969696"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:background="#ffffff" >

                    <Button
                        android:id="@+id/btn_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/mts_login_btn"
                        android:text="查询"
                        android:textColor="#FFFFFF" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>