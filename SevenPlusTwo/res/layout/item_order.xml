<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单：30857"
            android:textColor="#3C3C3C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="订单日期：2016-09-08"
            android:textColor="#3C3C3C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_no"
            android:layout_marginTop="11dip"
            android:text="店铺：朝阳"
            android:textColor="#a0a0a0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shop"
            android:layout_marginTop="8dip"
            android:text="销售渠道：POS零售"
            android:textColor="#a0a0a0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_channels"
            android:layout_marginTop="15dip"
            android:text="合计："
            android:textColor="#a0a0a0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_channels"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="13dip"
            android:layout_toRightOf="@+id/tv_text"
            android:text="￥ 5000"
            android:textColor="#FF3535"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_issucces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#80d900"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_below="@+id/tv_order_date"
            android:layout_marginTop="11dip"
            android:text="已结清"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_isfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_date"
            android:background="#44bef6"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="11dip"
            android:layout_toLeftOf="@+id/tv_issucces"
            android:text="已完成"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>