<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/my_marginVertical"
    android:paddingRight="@dimen/my_marginVertical"
    android:paddingTop="@dimen/my_marginVertical"
    android:paddingBottom="@dimen/my_marginTop"
    tools:context="com.example.sevenplustwo.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_ordergoods_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ordergoods_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="#616161"
                android:textSize="@dimen/my_contentTextSize" />

            <TextView
                android:id="@+id/tv_ordergoods_colorShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_marginTop"
                android:textColor="#616161"
                android:textSize="@dimen/my_contentTextSize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginTop"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ordergoodsitem_belong"
            android:textColor="#9C9C9C"
            android:textSize="@dimen/my_contentTextSize" />

        <TextView
            android:id="@+id/tv_ordergoods_belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:textSize="@dimen/my_contentTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginTop"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_ordergoods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ordergoodsitem_number"
                android:textColor="#9C9C9C"
                android:textSize="@dimen/my_contentTextSize" />

            <TextView
                android:id="@+id/tv_ordergoods_numberShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9ECA40"
                android:textSize="@dimen/my_contentTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ordergoodsitem_price"
                android:textColor="#9C9C9C"
                android:textSize="@dimen/my_contentTextSize" />

            <TextView
                android:id="@+id/tv_ordergoods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="@dimen/my_contentTextSize" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/my_marginTop"
        android:background="#E7E7E7" />

</LinearLayout>