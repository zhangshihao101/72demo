<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sevenplustwo.MainActivity$PlaceholderFragment" >

    <com.spt.controler.MyTitleBar
        android:id="@+id/mtb_sendorder_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginTop"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:layout_weight="4"
                android:background="#E0E0E0"
                android:text="@string/orderdetail_receiveInfo"
                android:textSize="@dimen/my_contentTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sendorder_receiveInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:layout_marginRight="@dimen/my_marginHorizontal"
                android:layout_marginTop="@dimen/my_marginTop"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_sendorder_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderdetail_receiver"
                    android:textSize="@dimen/my_contentTextSize" />

                <TextView
                    android:id="@+id/tv_sendorder_receiverShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/my_contentTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_marginTop"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:layout_marginRight="@dimen/my_marginHorizontal"
                android:layout_marginTop="@dimen/my_marginTop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderdetail_receiverPhone"
                    android:textSize="@dimen/my_contentTextSize" />

                <TextView
                    android:id="@+id/tv_sendorder_receiverPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/my_contentTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_marginTop"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:layout_marginRight="@dimen/my_marginHorizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderdetail_receiveradress"
                    android:textSize="@dimen/my_contentTextSize" />

                <TextView
                    android:id="@+id/tv_sendorder_receiveAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/my_contentTextSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my_marginTop"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_marginHorizontal"
            android:layout_marginRight="@dimen/my_marginHorizontal"
            android:layout_marginTop="@dimen/my_marginTop"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sendorder_transNo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="@string/orderdetail_transNo"
                android:textSize="@dimen/my_contentTextSize" />

            <EditText
                android:id="@+id/et_sendorder_transNo"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@drawable/shape"
                android:hint="@string/editHint"
                android:paddingLeft="10dp"
                android:textSize="@dimen/my_contentTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my_marginTop"
            android:layout_marginLeft="@dimen/my_marginHorizontal"
            android:layout_marginRight="@dimen/my_marginHorizontal"
            android:layout_marginTop="@dimen/my_marginTop"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sendorder_transCompany"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="@string/orderdetail_transCompany"
                android:textSize="@dimen/my_contentTextSize" />

            <Spinner
                android:id="@+id/spin_sendorder_transCompany"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@drawable/shape"
                android:hint="@string/editHint"
                android:textSize="@dimen/my_radioButtonTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my_marginTop"
            android:layout_marginLeft="@dimen/my_marginHorizontal"
            android:layout_marginRight="@dimen/my_marginHorizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="@string/orderdetail_otherInfo"
                android:textSize="@dimen/my_contentTextSize" />

            <EditText
                android:id="@+id/et_sendorder_transOther"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@drawable/shape"
                android:hint="@string/editHint"
                android:paddingLeft="10dp"
                android:textSize="@dimen/my_contentTextSize" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sendorder_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/my_marginHorizontal"
        android:layout_marginRight="@dimen/my_marginHorizontal"
        android:layout_marginTop="@dimen/my_marginVertical"
        android:background="@drawable/homebuttongreen"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my_buttonTextSize" />

</LinearLayout>