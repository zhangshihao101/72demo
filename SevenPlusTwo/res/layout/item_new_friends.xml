<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="20dip" >

        <com.spt.controler.CircleImageView
            android:id="@+id/iv_friends_header"
            android:layout_width="50dip"
            android:layout_height="50dip" />

        <TextView
            android:id="@+id/tv_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@+id/iv_friends_header"
            android:text="王尼玛"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_name_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@+id/tv_friends_name"
            android:text="天津"
            android:textColor="#b4b4b4"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_friends_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@+id/tv_name_position"
            android:background="@drawable/new_peer_tag1" />

        <TextView
            android:id="@+id/tv_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/person_detail_head_add_btn_space"
            android:gravity="center"
            android:text="已添加"
            android:textColor="#b4b4b4" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:text="拒绝"
            android:textColor="#b4b4b4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dip"
            android:layout_toLeftOf="@+id/tv_no"
            android:padding="5dip"
            android:text="同意"
            android:textColor="#52aee2"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="70dip" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_people" />
    </RelativeLayout>

</LinearLayout>