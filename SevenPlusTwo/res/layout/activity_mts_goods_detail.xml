<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#36a3ea" >

        <ImageView
            android:id="@+id/iv_mts_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/topbar_back_btn"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_goods_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_share" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sl_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dip" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_nopager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_Point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D6D6D9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Arcterty 始祖鸟棉质短袖T恤Arcterty 始祖鸟棉质短袖T恤Arcterty 始祖鸟棉质短袖T恤Arcterty 始祖鸟棉质短袖T恤Arcterty 始祖鸟棉质短袖T恤"
                    android:textColor="#333333" />

                <LinearLayout
                    android:id="@+id/rl_goods_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_goods_name"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dip"
                            android:paddingTop="6dip" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <TextView
                                    android:id="@+id/tv_goods_brand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="middle"
                                    android:maxLength="20"
                                    android:singleLine="true"
                                    android:text="土拨鼠"
                                    android:textColor="#3c3c3c"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_brands"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_brand"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dip"
                                    android:text="品牌"
                                    android:textColor="#a0a0a0"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="6dip" >

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#D6D6D9" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dip"
                            android:paddingTop="6dip" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <TextView
                                    android:id="@+id/tv_goods_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="middle"
                                    android:maxLength="20"
                                    android:singleLine="true"
                                    android:text="7JIA2"
                                    android:textColor="#3c3c3c"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_style"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dip"
                                    android:text="款号"
                                    android:textColor="#a0a0a0"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="6dip" >

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#D6D6D9" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dip"
                            android:paddingTop="6dip" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <TextView
                                    android:id="@+id/tv_goods_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="middle"
                                    android:maxLength="20"
                                    android:singleLine="true"
                                    android:text="￥668"
                                    android:textColor="#3c3c3c"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_price"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dip"
                                    android:text="吊牌价"
                                    android:textColor="#a0a0a0"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <TextView
                                    android:id="@+id/tv_goods_public"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="middle"
                                    android:maxLength="20"
                                    android:singleLine="true"
                                    android:text="男装"
                                    android:textColor="#3c3c3c"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_public"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_public"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dip"
                                    android:text="公共分类"
                                    android:textColor="#a0a0a0"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dip" >

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#D6D6D9" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <TextView
                                    android:id="@+id/tv_goods_mine"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="middle"
                                    android:maxLength="20"
                                    android:singleLine="true"
                                    android:text="男装"
                                    android:textColor="#3c3c3c"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_mine"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_mine"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dip"
                                    android:text="我的分类"
                                    android:textColor="#a0a0a0"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dip" >

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#D6D6D9" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <TextView
                                    android:id="@+id/tv_goods_flag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="middle"
                                    android:maxLength="20"
                                    android:singleLine="true"
                                    android:text="私有"
                                    android:textColor="#3c3c3c"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_flag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_flag"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dip"
                                    android:text="我的标识"
                                    android:textColor="#a0a0a0"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D6D6D9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色"
                    android:textColor="#333333" />

                <com.spt.controler.FlowTagLayout
                    android:id="@+id/fl_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_color"
                    android:layout_marginLeft="8dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尺码"
                    android:textColor="#333333" />

                <com.spt.controler.FlowTagLayout
                    android:id="@+id/fl_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_size"
                    android:layout_marginLeft="8dip" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D6D6D9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_text_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述"
                    android:textColor="#333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:layout_below="@+id/tv_text_describe"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_spots_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_text_describe"
                    android:layout_marginTop="5dip"
                    android:text="是否现货"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_spots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_text_describe"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/tv_spots_text"
                    android:text="是"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#36a3ea"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/tv_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:text="￥ 668"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_text_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_rmb"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tv_rmb"
                    android:text="价格"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dip"
                android:padding="8dip" >

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100件"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_count"
                    android:text="现货数量"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sale_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rl_count"
                android:padding="8dip" >

                <TextView
                    android:id="@+id/tv_sale_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100件"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_text_sale_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sale_count"
                    android:text="可销售数量"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#7fc6f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_unshelve"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#36a3ea"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="13dip"
                android:paddingRight="13dip"
                android:paddingTop="10dip"
                android:text="下架"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#7fc6f4" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#36a3ea"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="13dip"
                android:paddingRight="13dip"
                android:paddingTop="10dip"
                android:text="编辑"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#7fc6f4" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#36a3ea"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="13dip"
                android:paddingRight="13dip"
                android:paddingTop="10dip"
                android:text="删除"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>