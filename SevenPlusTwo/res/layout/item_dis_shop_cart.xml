<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/cb_dis_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/cb_select_goods" />

        <ImageView
            android:id="@+id/iv_dis_shop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cb_dis_shop" />

        <ImageView
            android:id="@+id/iv_dis_shop_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_dis_shop"
            android:layout_below="@id/iv_dis_shop"
            android:layout_marginBottom="10dp"
            android:src="@drawable/reduce" />

        <TextView
            android:id="@+id/tv_dis_shop_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dis_shop_reduce"
            android:layout_toRightOf="@id/iv_dis_shop_reduce"
            android:background="@drawable/count_background"
            android:gravity="center"
            android:text="1"
            android:textColor="#FF6634" />

        <ImageView
            android:id="@+id/iv_dis_shop_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dis_shop_reduce"
            android:layout_toRightOf="@id/tv_dis_shop_count"
            android:src="@drawable/plus" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_dis_shop_reduce" />

        <TextView
            android:id="@+id/tv_dis_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_dis_shop"
            android:layout_toRightOf="@id/iv_dis_shop"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="瞌睡滴哦赛哦撒ufsiodgdsiohdfiosgfghdfklhg" />

        <TextView
            android:id="@+id/tv_dis_shop_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/TextView3"
            android:layout_alignLeft="@+id/tv_dis_shop_name"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="产品规格"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dis_shop"
            android:layout_alignLeft="@id/tv_dis_shop_spec"
            android:text="代销价："
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_dis_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dis_shop"
            android:layout_toRightOf="@id/TextView3"
            android:text="0.00"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

</RelativeLayout>