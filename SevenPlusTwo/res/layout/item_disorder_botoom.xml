<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImageView3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/iv_disorder_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_disorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_disorder_img"
            android:layout_toRightOf="@id/iv_disorder_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="" />

        <TextView
            android:id="@+id/tv_disorder_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/TextView3"
            android:layout_alignLeft="@+id/tv_disorder_name"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="产品规格"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_disorder_img"
            android:layout_alignLeft="@id/tv_disorder_spec"
            android:text="销售价："
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_disorder_disprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_disorder_img"
            android:layout_toRightOf="@id/TextView3"
            android:text="0.00"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_disorder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_disorder_disprice"
            android:layout_alignParentRight="true"
            android:text="X 1" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeLayout1" />

</RelativeLayout>