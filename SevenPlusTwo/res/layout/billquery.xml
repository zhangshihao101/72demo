<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sevenplustwo.MainActivity$PlaceholderFragment" >

    <com.spt.controler.MyTitleBar
        android:id="@+id/mtb_billQuery_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.spt.controler.MySearchEditText
        android:id="@+id/mset_billQuery_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginVertical"
        android:background="#E0E0E0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_marginHorizontal"
            android:text="@string/bill_state"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/rg_billQuery_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_billQuery_noState"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/goodsQuery_no"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_billQuery_unconfirm"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/bill_unconfirm"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_billQuery_confirmed"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/bill_confirmed"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_billQuery_payed"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/bill_payed"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginVertical"
        android:background="#E0E0E0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_marginHorizontal"
            android:text="@string/billQuery_belong"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/rg_billQuery_belong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_billQuery_noBelong"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/goodsQuery_no"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_billQuery_tuan"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/orderquery_state_tuan"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_billQuery_normal"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_marginTop"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="@dimen/my_marginTop"
                    android:background="@drawable/goodselector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/orderquery_state_normal"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginVertical"
        android:background="#E0E0E0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_marginHorizontal"
            android:text="@string/bill_payDate"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_billQuery_startTime"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_marginTop"
                android:layout_marginTop="@dimen/my_marginTop"
                android:layout_marginLeft="@dimen/my_marginHorizontal"
                android:layout_weight="8"
                android:background="@drawable/shape"
                android:text="@string/orderquery_time_starttime"
                android:textSize="15sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_marginTop"
                android:layout_marginTop="@dimen/my_marginTop"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sps" />

            <TextView
                android:id="@+id/tv_billQuery_endTime"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_marginTop"
                android:layout_marginTop="@dimen/my_marginTop"
                android:layout_marginRight="@dimen/my_marginHorizontal"
                android:layout_weight="8"
                android:background="@drawable/shape"
                android:text="@string/orderquery_time_endtime"
                android:textSize="15sp"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_billQuery_query"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="30sp"
        android:background="@drawable/homebuttongreen"
        android:paddingLeft="@dimen/my_marginHorizontal"
        android:paddingRight="@dimen/my_marginHorizontal"
        android:text="@string/orderquery_query"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>