<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/my_marginVertical"
    android:paddingLeft="@dimen/my_marginHorizontal"
    android:paddingRight="@dimen/my_marginHorizontal"
    android:paddingTop="@dimen/my_marginVertical"
    tools:context="com.example.sevenplustwo.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ordersItem_ordersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:textSize="@dimen/my_contentTextSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="right" >

            <TextView
                android:id="@+id/tv_ordersItem_ordersPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#646464"
                android:textSize="@dimen/my_contentTextSize"
                android:layout_gravity="center_vertical" />
            
            <TextView
                android:id="@+id/tv_ordersItem_ordersPriceChanged"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:background="@drawable/changed"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_marginTop"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ordersItem_ordersDate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:textColor="#9C9C9C"
            android:textSize="@dimen/my_radioButtonTextSize" />

        <TextView
            android:id="@+id/tv_ordersItem_ordersState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/my_radioButtonTextSize" />
    </LinearLayout>

</LinearLayout>