<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="com.example.sevenplustwo.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/et_myEditText_content"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="13"
        android:background="@null"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/ll_myEditText_clear"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_myEditText_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/clearbutton"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>