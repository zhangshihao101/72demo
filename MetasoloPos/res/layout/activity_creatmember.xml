<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="34"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="142"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="95"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dip" >

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                    <TextView
                                        android:id="@+id/tv_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/new_members"
                                        android:textColor="#333333"
                                        android:textSize="20sp" />

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/tv_textview"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:drawableLeft="@drawable/nochosen"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_name"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <EditText
                                            android:id="@+id/et_cra_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="30dip"
                                            android:layout_toRightOf="@+id/tv_cra_name"
                                            android:background="@drawable/selector_creat_edit"
                                            android:singleLine="true"
                                            android:textColor="#333333" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_gender"
                                        android:layout_width="320dip"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/rl_cre_name"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_gender"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_sex"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <RadioGroup
                                            android:id="@+id/rg_cra_gender"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="33dip"
                                            android:layout_toRightOf="@+id/tv_cra_gender"
                                            android:orientation="horizontal" >

                                            <RadioButton
                                                android:id="@+id/rbtn_male"
                                                android:layout_width="0dip"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:button="@drawable/selector_gender_chosen"
                                                android:text="男"
                                                android:textColor="#333333"
                                                android:textSize="17sp"
                                                android:textStyle="bold" />

                                            <RadioButton
                                                android:id="@+id/rbtn_female"
                                                android:layout_width="0dip"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:button="@drawable/selector_gender_chosen"
                                                android:text="女"
                                                android:textColor="#333333"
                                                android:textSize="17sp"
                                                android:textStyle="bold" />
                                        </RadioGroup>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/rl_cre_gender"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:drawableLeft="@drawable/nochosen"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_phone"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <EditText
                                            android:id="@+id/et_cra_phone"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="15dip"
                                            android:layout_toRightOf="@+id/tv_cra_phone"
                                            android:background="@drawable/selector_creat_edit"
                                            android:singleLine="true"
                                            android:textColor="#333333" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_id"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/rl_cre_phone"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_card"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <EditText
                                            android:id="@+id/et_cra_id"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="33dip"
                                            android:layout_toRightOf="@+id/tv_cra_id"
                                            android:background="@drawable/selector_creat_edit"
                                            android:singleLine="true"
                                            android:textColor="#333333" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_grade"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/rl_cre_id"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_grade"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_grade"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <Spinner
                                            android:id="@+id/sp_cra_grade"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="17dip"
                                            android:layout_toRightOf="@+id/tv_cra_grade"
                                            android:background="@drawable/selector_creat_edit"
                                            android:textColor="#333333" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_remark"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/rl_cre_grade"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_remark"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_remark"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <EditText
                                            android:id="@+id/et_cra_remark"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="33dip"
                                            android:layout_toRightOf="@+id/tv_cra_remark"
                                            android:background="@drawable/selector_creat_edit"
                                            android:singleLine="true"
                                            android:textColor="#333333" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_cre_keyword"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dip"
                                        android:layout_below="@+id/rl_cre_remark"
                                        android:layout_marginTop="13dip" >

                                        <TextView
                                            android:id="@+id/tv_cra_keyword"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:text="@string/member_keyword"
                                            android:textColor="#333333"
                                            android:textSize="17sp" />

                                        <EditText
                                            android:id="@+id/et_cra_keyword"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="33dip"
                                            android:layout_toRightOf="@+id/tv_cra_keyword"
                                            android:background="@drawable/selector_creat_edit"
                                            android:singleLine="true"
                                            android:textColor="#333333" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </ScrollView>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="15"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#CCCCCC"
                        android:text="@string/cancel"
                        android:textColor="#333333"
                        android:textSize="26sp" />

                    <Button
                        android:id="@+id/btn_creat"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#66CCFF"
                        android:text="@string/confirm"
                        android:textColor="#ffffff"
                        android:textSize="26sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="30"
        android:orientation="horizontal" >
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/loading"
        android:visibility="gone" />

</LinearLayout>