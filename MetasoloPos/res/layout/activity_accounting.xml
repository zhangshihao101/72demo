<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:background="@drawable/bank"
                android:clickable="true"
                android:onClick="closeActivity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/settlement_of_cashier"
                android:textColor="#717171"
                android:textSize="25sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="167"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F2F4F5" >

                <RelativeLayout
                    android:id="@+id/rl_rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/cash"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/iv_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/gift"
                        android:clickable="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_rl1"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/wechat"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/alipay"
                        android:clickable="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_rl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_rl2"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_visa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/visa"
                        android:clickable="true" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/line_1" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="143"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="41"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="160"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="112"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="24"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dip"
                                    android:layout_weight="5"
                                    android:orientation="horizontal" >
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dip"
                                    android:layout_weight="13"
                                    android:orientation="horizontal" >

                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="40" >

                                        <TextView
                                            android:id="@+id/tvar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="应收"
                                            android:textSize="25sp" />

                                        <TextView
                                            android:id="@+id/tv_ar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvar"
                                            android:layout_marginTop="10dip"
                                            android:numeric="decimal"
                                            android:textColor="#FF6633"
                                            android:textSize="22sp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="40" >

                                        <TextView
                                            android:id="@+id/tvnr"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="实收"
                                            android:textSize="25sp" />

                                        <TextView
                                            android:id="@+id/tv_nr"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvnr"
                                            android:layout_marginTop="10dip"
                                            android:numeric="decimal"
                                            android:textColor="#FF6633"
                                            android:textSize="22sp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="40" >

                                        <TextView
                                            android:id="@+id/tvchangge"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="找零/未收"
                                            android:textSize="25sp" />

                                        <TextView
                                            android:id="@+id/tv_changge"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvchangge"
                                            android:layout_marginTop="10dip"
                                            android:numeric="decimal"
                                            android:textColor="#FF6633"
                                            android:textSize="22sp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rl_paycontent"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="56" >

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical" >

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" >

                                            <RelativeLayout
                                                android:id="@+id/rl_row1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_cash"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:text="现金金额："
                                                    android:textSize="22sp" />

                                                <EditText
                                                    android:id="@+id/et_cash"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="32dip"
                                                    android:layout_toRightOf="@+id/tv_cash"
                                                    android:background="@drawable/selector_accounting_edit"
                                                    android:inputType="numberDecimal"
                                                    android:padding="10dip"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row1"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_giftsum"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:text="礼品卡金额："
                                                    android:textSize="22sp" />

                                                <EditText
                                                    android:id="@+id/et_giftsum"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dip"
                                                    android:layout_toRightOf="@+id/tv_giftsum"
                                                    android:background="@drawable/selector_accounting_edit"
                                                    android:inputType="numberDecimal"
                                                    android:padding="10dip"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row3"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row2"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_giftno"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:text="礼品卡卡号："
                                                    android:textSize="22sp" />

                                                <EditText
                                                    android:id="@+id/et_giftno"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dip"
                                                    android:layout_toRightOf="@+id/tv_giftno"
                                                    android:background="@drawable/selector_accounting_edit"
                                                    android:inputType="number"
                                                    android:padding="10dip"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row4"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row3"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_wechat_amount"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:text="微信金额："
                                                    android:textSize="22sp" />

                                                <EditText
                                                    android:id="@+id/et_wechat_amount"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="32dip"
                                                    android:layout_toRightOf="@+id/tv_wechat_amount"
                                                    android:background="@drawable/selector_accounting_edit"
                                                    android:inputType="numberDecimal"
                                                    android:padding="10dip"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row5"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row4"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_alipay_amount"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:text="支付宝金额："
                                                    android:textSize="22sp" />

                                                <EditText
                                                    android:id="@+id/et_alipay_amount"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dip"
                                                    android:layout_toRightOf="@+id/tv_alipay_amount"
                                                    android:background="@drawable/selector_accounting_edit"
                                                    android:inputType="numberDecimal"
                                                    android:padding="10dip"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row6"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row5"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_visa_amount"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:text="银行卡金额："
                                                    android:textSize="22sp" />

                                                <EditText
                                                    android:id="@+id/et_visa_amount"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dip"
                                                    android:layout_toRightOf="@+id/tv_visa_amount"
                                                    android:background="@drawable/selector_accounting_edit"
                                                    android:inputType="numberDecimal"
                                                    android:padding="10dip"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row7"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row6"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_scanO"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:drawablePadding="8dip"
                                                    android:drawableRight="@drawable/scan"
                                                    android:text="微信扫一扫"
                                                    android:textSize="22sp" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/rl_row8"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/rl_row7"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginLeft="15dip"
                                                android:layout_marginRight="15dip"
                                                android:layout_marginTop="15dip"
                                                android:visibility="gone" >

                                                <TextView
                                                    android:id="@+id/tv_scan"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:drawablePadding="8dip"
                                                    android:drawableRight="@drawable/scan"
                                                    android:text="支付宝扫一扫"
                                                    android:textSize="22sp" />

                                                <TextView
                                                    android:id="@+id/tv_payno"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="50dip"
                                                    android:layout_toRightOf="@+id/tv_scan"
                                                    android:drawablePadding="8dip"
                                                    android:drawableRight="@drawable/payment"
                                                    android:text="支付宝付款码"
                                                    android:textSize="22sp" />

                                            </RelativeLayout>

                                            <ImageView
                                                android:id="@+id/iv_qr"
                                                android:layout_width="160dp"
                                                android:layout_height="160dp"
                                                android:layout_below="@+id/rl_row8"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="15dip" />
                                        </RelativeLayout>
                                    </LinearLayout>
                                </ScrollView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_noaccount"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="56"
                                android:visibility="gone" >

                                <TextView
                                    android:id="@+id/tv_noaccount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:drawableTop="@drawable/nopay"
                                    android:text="请先选择支付方式"
                                    android:textColor="#EEEEEE"
                                    android:textSize="25sp"
                                    android:visibility="visible" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="41"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="24"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#EEEEEE"
                        android:padding="20dip" >

                        <Spinner
                            android:id="@+id/sp_account_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/selector_accounting_edit" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_account"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="结    算"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/loading"
        android:visibility="gone" />

</RelativeLayout>