<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:background="@drawable/flagfree"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/tv_flag"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLength="40"
            android:singleLine="true"
            android:text="mont-bell梦北路男款超清冲锋衣  1103174"
            android:textColor="#333333"
            android:textSize="21sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="33"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="23"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="24" >

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="140dip"
                    android:layout_height="140dip"
                    android:background="@drawable/product_no_img" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:paddingBottom="8dip"
                android:paddingTop="4dip" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色：红色"
                        android:textColor="#333333"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_color"
                        android:layout_marginTop="8dip"
                        android:text="尺码：S"
                        android:textColor="#333333"
                        android:textSize="19sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25" >

                <ImageView
                    android:id="@+id/iv_cut"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_number"
                    android:scaleType="fitCenter"
                    android:src="@drawable/addition_bg" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="1"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_number"
                    android:scaleType="fitCenter"
                    android:src="@drawable/subtraction_bg" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/tv_original"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="26"
                android:gravity="center"
                android:text="￥ 254.00"
                android:textColor="#CCCCCC"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="30" >

                <TextView
                    android:id="@+id/tv_present"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/present_bg"
                    android:gravity="center"
                    android:text="204.00"
                    android:textColor="#333333"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9" >

                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/draw_clean" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>